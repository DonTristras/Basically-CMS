
@{
    ViewData["Title"] = "Leaves";
}

<h2>Index</h2>

<leaf-component inline-template command="list">
    <section>
        <div  class="col-md-3">
            <div class="leaf-tooling">
                <i v-on:click="createLeaf()" class="glyphicon glyphicon-plus"></i>
            </div>
            <div v-for="record in records">
                <span>{{ record.name }} <i v-on:click="editLeaf(record._id)" class="glyphicon glyphicon-edit"></i></span>
            </div>
        </div>
        <div  class="col-md-9">
            <iframe ref="leafEditArea" style="height:100vh;width:100%;border: none;"></iframe>
        </div>
    </section>
</leaf-component>